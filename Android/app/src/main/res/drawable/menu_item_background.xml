<?xml version="1.0" encoding="utf-8"?>

<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true" android:state_checked="true">
        <layer-list>
            <item>
                <shape>
                    <solid android:color="@color/menu_item_checked_highlight"/>
                </shape>
            </item>
            <item>
                <inset android:insetLeft="@dimen/menu_left_strip">
                    <shape>
                        <solid android:color="@color/menu_item_pressed"/>
                    </shape>
                </inset>
            </item>
        </layer-list>
    </item>
    <item android:state_pressed="true">
        <shape>
            <solid android:color="@color/menu_item_pressed"/>
        </shape>
    </item>
    <item android:state_checked="true">
        <layer-list>
            <item>
                <shape>
                    <solid android:color="@color/menu_item_checked_highlight"/>
                </shape>
            </item>
            <item>
                <inset android:insetLeft="@dimen/menu_left_strip">
                    <shape>
                        <solid android:color="@color/menu_item_checked"/>
                    </shape>
                </inset>
            </item>
        </layer-list>
    </item>
    <item>
        <shape>
            <solid android:color="@color/menu_background"/>
        </shape>
    </item>
</selector>